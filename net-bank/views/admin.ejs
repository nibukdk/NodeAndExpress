<%include ./partials/header.ejs %>
  <!-- Form for registration route -->
  <div class="col-lg-9 col-sm-6  mx-auto">
    <h1 class="text-dark">Admin Page</h1>
    <p>Welcome Admin </p>
    <div class="table-responsive">
      <table class="table">
        <caption>List of users</caption>
        <thead  class="thead-dark">

          <tr>
            <th scope="col">#</th>
            <th scope="col">Users</th>
            <th scope="col">Last logged In</th>
            <th scope="col">Admin Rights</th>
            <th scope="col"> Link</th>
          </tr>
        </thead>
        <tbody>
          <%  let counter = 1; %>
            <% result.forEach((userInfo)=>{ %>

              <tr>
                <th scope="row">
                  <%= counter++ %>
                </th>
                <td>
                  <%=userInfo.username %>
                </td>
                <td>
                  <%= userInfo.last_login_date.toLocaleTimeString().substring(0,8) %>,
                    <%= userInfo.last_login_date.toLocaleDateString("en-GB",{ weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
                </td>
                <td>
                  <% if(userInfo.isAdmin){ %>
                    True
                    <%  }else{ %>
                      False
                      <%  }%>

                </td>
                <td>
                  <span>  <a href="/admin/<%= userInfo._id %>/details" role="button">Check Detail</a></span>
                </td>

              </tr>
              <%  }) %>
        </tbody>
      </table>
    </div>
  </div>

  <%include ./partials/footer.ejs %>
