<%include ./partials/header.ejs %>
  <!-- Form for registration route -->
  <div class="container">
    <div class="row">
      <div class="col-lg-9 col-sm-9 mx-auto bg-dark">
        <br/>
        <h1 class="text-info mx-auto">Update User Info</h1>
        <br/>
        <form action="/admin/<%= userInfo._id %>/details?_method=PUT" method="POST" class="row justify-content-center bg-dark text-white">
          <div class="col-lg-9">
            <div class="form-group">
              <label for="name">Name</label>
              <input class="form-control" type="text" name="name" value="<%= userInfo.name%>">
            </div>
          </div>
          <div class="col-lg-9">

            <div class="form-group">
              <label for="email">Email address</label>
              <input type="email" class="form-control" id="email" aria-describedby="email" placeholder="Enter email" name="email" value="<%= userInfo.email%>" required>
              <small id="email" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
          </div>
          <div class="col-lg-9">
            <div class="form-group">
              <label for="age">Age</label>
              <input class="form-control" id="age" type="number" name="age" min="18" max="65" value="<%= userInfo.age%>">
            </div>
          </div>
          <div class="col-lg-9">
            <div class="form-group">
              <label for="username">User Name</label>
              <input class="form-control" type="text" id="username" name="username" value="<%= userInfo.username%>">
            </div>
          </div>
          <div class="col-lg-9">
            <button class="btn  btn-info btn-block">Update</button>
          </div>

        </form>
        <br/>
        <div class=" mx-auto">
          <a type="button" href="/admin/<%= userInfo._id %>/details" class="btn btn-success btn-block cancel">Cancel</a>
        </div>
        <br/>
      </div>
      <%include ./partials/footer.ejs %>
